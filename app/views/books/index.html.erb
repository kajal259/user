<h1>Listing Books</h1>
<%#= render (@books) || "there are no products available" #%>
<%#= render "books/shared/ad_baneer" #%>

<%= render partial: "book", collection: @books, as: :title, locals: {title: "books page"} %>
<%= render "books/shared/search_filter", search: @books do |form|  %>
  <p>
    Title contains: <%= form.text_field :title %>
  </p>
<% end %>
<table border = 1>
  <thead>
   

    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>   
  
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.content %></td>
        <td><%= link_to "show",book_path(book.id)  %></td>
        <td><%= link_to 'edit', edit_book_path(book.id) %></td>
        <td><%#= image_tag "download.jpeg", size: "10*20"# %></td>
        <td><%#= audio_tag "RaatanLambiyan.mp3"# %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'new', new_book_path %><br>
<%= render "books/shared/menu" %>
<%= render "books/shared/footer" %>


<%= render "link_area", layout: "graybar" %>
<%#= render partial: "form", object: @book #%>
<%= render partial: "book", collection: @book %>